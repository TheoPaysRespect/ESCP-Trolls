			<li Class="ESCP_Trolls.BiomeFeatureRequirements">
				<requireCaves>True</requireCaves>
			</li>
			<li Class="NocturnalAnimals.ExtendedRaceProperties" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
